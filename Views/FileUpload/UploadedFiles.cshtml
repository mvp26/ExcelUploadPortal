@{
    ViewData["Title"] = "Uploaded Files";
}
<h2>Uploaded Files</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file</td>
                    <td>
                        <a asp-action="DownloadFile" asp-controller="FileUpload" asp-route-fileName="@file" class="btn btn-success">Download</a>
                        <a asp-action="PreviewFile" asp-controller="FileUpload" asp-route-fileName="@file" class="btn btn-info">Preview</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files have been uploaded yet.</p>
}

<a asp-action="Upload" asp-controller="FileUpload" class="btn btn-primary">Upload New File</a>
